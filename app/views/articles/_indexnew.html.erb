<%if current_user %>

  <section id="section-services" class="section pad-bot30 bg-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>My Blog</h1>
          <!--<img class="navbar-logo" src="img/logo.png" alt="Vector Logo">-->


        </div>

      <div class="col-md-6">
        <div class="row">
          <%= form_tag(user_articles_path, method: :get, html: {class: 'form-search'}) do %>
          <form class="form-search">

            <div class="col-md-6"></div>
            <div class="col-md-6">


              <div class="form-group">
                <%= text_field_tag :search, params[:search],class: 'form-control', placeholder: 'Search Articles', value: '' %>
               <%#= submit_tag 'Search', name: nil,class: 'btn btn-primary' %>
                <button type="submit" class="btn btn-primary" data-disable-with="Go">
                  Go
                </button>

            </div>
            </div>
          </form>
          <% end %>
        </div>
      </div>
      </div>
      <div>
        <span class="label label-primary"> Logged in as <%= current_user.email %></span>

        <%= link_to 'Home', root_url ,class: 'btn btn-success btn-xs'%>
        <% if current_user.role == "admin" %>
          <%= link_to 'Admin Panel', users_path, class: 'btn btn-danger btn-xs' %>
        <%end %>
        <%= link_to 'Profile',current_user,class: 'btn btn-info btn-xs'%>

        <%= link_to 'Log Out', logout_path, class: 'btn btn-danger btn-xs' %>
        <br><br>

        <%= link_to new_user_article_path(current_user) ,class: 'btn btn-success btn-lg' do%>
        <i class="glyphicon glyphicon-plus"></i> Create Article
        <%end %>

      </div>



    </div>
  </section>

  <section id="section-works" class="section appear clearfix">
    <div class="container">
      <% @user = User.find(params[:user_id])%>
      <% if @user.articles.search(params[:search]).count == 0  %>
        <h2 class="text-danger">No Article Found</h2>
        <%=link_to 'Return to My Articles',  user_articles_path, class: 'btn btn-info' %>
      <%else %>
      <%end %>
      <div class="row">

        <div class="col-md-12">
          <div class="row">

            <div class="portfolio-items isotopeWrapper clearfix" id="3">


              <%#articles = Article.search(params[:search]) %>

              <% @user.articles.search(params[:search]).each do |article| %>

              <article class="col-md-4">
                <div class="imgBlock">
                  <div class="img-container">
                    <%= image_tag("portfolio/img1.jpg") %>
                  <div class="img-overlay">
                    <p class="img-btn">
                      <span class="date"><%= article.updated_at.strftime("%b %d, %Y") %></span>

                      <% if article.user == @user || current_user.role == "admin" %>
                        <span>|</span>
                      <%= link_to 'Edit', edit_user_article_path(@user,article), class: "url-text"%>
                      <%= link_to 'Delete', [article.user, article],
                                  method: :delete,
                                  data: { confirm: 'Are you sure?' }, class: 'url-text' %>
                      <%end %>
                    <h2 class="h2-text">
                      <a href="<%= user_article_path(@user,article)%>"><%=article.title %></a>
                    </h2>
                    </p>
                  </div>
                </div>
                </div>
              </article>
              <%end %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <%end %>