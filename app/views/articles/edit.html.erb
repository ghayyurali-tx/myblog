<%if current_user %>
  <div class="container">
    <div  class="page-header">
<h1>Edit Article</h1>
    </div></div>
  <div class="container">
    <span class="label label-primary"> Logged in as <%= current_user.email %></span>
    <%= link_to 'Log Out', logout_path, class: 'btn btn-danger btn-xs' %>
  </div><br>
<div class="container">
<%= form_with model: @article, url: user_article_path, local: true do |form| %>

    <div class="form-group">

      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-label-group">
      <p>
        <%= form.label :title %><br>
        <%= form.text_field :title, class: 'form-control' %>
      </p></div>

      <div class="form-label-group">
      <p>
        <%= form.label :text %><br>
        <%= form.text_area :text, class: 'form-control' %>
      </p></div>

      <p>
        <%= form.submit 'Submit', class: "btn btn-success btn-xs" %>
      </p>
    </div>
<% end %>

  <%= link_to 'My Articles', user_articles_path, class: 'btn btn-primary btn-xs' %>
  <%= link_to 'Home', root_url,class: 'btn btn-info btn-xs' %>
  </div>
<%end %>