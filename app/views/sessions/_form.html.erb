
  <p id=”alert”><%= alert %></p>
  <h1>Login</h1>
  <%= form_tag sessions_path, local: true do |form| %>
    <div class=”field”>
      <%= label_tag :email %> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= text_field_tag :email %>
    </div>
    <div class=”field”>
      <%= label_tag :password %> &nbsp
      <%= password_field_tag :password %>
    </div><br>
    <div class=”actions”>
      <%= submit_tag 'Log in', class: 'btn btn-success' %>
    </div>

  <% end %>

